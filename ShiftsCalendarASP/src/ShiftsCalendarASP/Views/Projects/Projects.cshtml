@model ProjectsViewModel
@{ 
    ViewData["Title"] = "Manage projects";
}
<div class="row">
    <div class="col-md-4">

        <form asp-controller="Projects" asp-action="AddProject" method="post">
            <h4>Add new Project</h4>

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NumberOfWorkers">Workers Required</label>
                <input asp-for="NumberOfWorkers" class="form-control" />
                <span asp-validation-for="NumberOfWorkers" class="text-danger"></span>
            </div>

            <div class="form-group">

                <button type="submit" class="btn btn-sm btn-success">Add Project</button>

            </div>
        </form>
    </div>
    <div class="col-md-8">
        @await Component.InvokeAsync("ProjectsList")
    </div>
</div>