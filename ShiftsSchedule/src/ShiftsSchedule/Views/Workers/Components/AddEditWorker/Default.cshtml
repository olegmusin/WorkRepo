@model WorkersViewModel

<h4>@Model.Action worker</h4>
@using (Html.BeginForm(Model.Action, "Workers"))
{
    Html.AntiForgeryToken();
    <div class="@Html.Raw(Model.Action == "Update" ? "form-group": "hidden")">
        <label asp-for="UserId"></label>
        <input asp-for="UserId" class="form-control" />
        <span asp-validation-for="UserId" class="text-warning" a></span>
    </div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-warning" a></span>
    </div>

    <div class="form-group">
        <label asp-for="Specialty"></label>
        <input asp-for="Specialty" class="form-control" />
        <span asp-validation-for="Specialty" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Salary"></label>
        <input asp-for="Salary" class="form-control" lang="en-us" autocomplete="off"/>
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>

    <div class="form-group">

        <button type="submit" class="btn btn-success" asp-route-id="@Model.Id">@Model.Action</button>  

    </div>
}
