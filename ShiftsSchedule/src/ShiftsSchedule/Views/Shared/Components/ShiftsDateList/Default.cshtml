@model IEnumerable<ShiftsViewModel>
@if (Model.Count() > 0)
{
    <ul id="shiftslist" style="text-align:center">
        @foreach (ShiftsViewModel shift in Model)
        {
            <li style="text-align: left">@String.Format("{0:dd/MM/yyyy}", shift.Date)</li>
        }
    </ul>
}
else
{
    <button class="btn btn-info btn-xs">
        <i class="fa fa-calendar">&nbsp Add Shifts</i>
    </button>
}