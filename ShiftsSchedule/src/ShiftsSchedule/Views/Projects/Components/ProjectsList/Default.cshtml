@model IEnumerable<ProjectsViewModel>
<table class="table table-striped table-responsive">

    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Workers Required</th>
            <th style="text-align:center">Shifts</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@project.Name</td>

                <td>@project.Address</td>

                <td id="nofw">@project.NumberOfWorkers</td>

                <td>@await Component.InvokeAsync("ShiftsDateList", new { projectId = project.Id })</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@project.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@project.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>


        }
    </tbody>
</table>
